extends ../base.pug 

block variables 
    - var template = 'about'

block content 
    .about 
     .about__wrapper 
      section.about__gallery 
       .about__gallery__wrapper 
        each media in about.data.gallery
         figure.about__gallery__media 
          image.about__gallery__media__image(alt=media.image.alt src=media.image.url)

      each section in about.data.body
       if section.slice_type == 'title'
        h2.about__title=section.primary.text

       if section.slice_type == 'content'
        section.about__content
            .about__content__wrapper
             .about__content__column
              p.about__content__label=PrismicH.asText(section.primary.label)

              .about__content__description!=PrismicH.asHTML(section.primary.description).replace(/<p>/g, '<p data-animation="paragraph">')

              figure.about__content__media 
               image.about__content__media__image(alt=section.primary.image.alt src=section.primary.image.url)
       
       if section.slice_type == 'hightlight'
        section.about__hightlight
         .about__hightlight__wrapper
           if section.primary.label 
            p.about__hightlight__label=section.primary.label
           h3.about__hightlight__title=section.primary.text

           .about__hightlight__medias
            each media in section.items
             figure.about__hightlight__media 
               image.about__hightlight__media__image(alt=media.image.alt src=media.image.url)

       if section.slice_type == 'gallery'
         section.about__gallery
          .about__gallery__wrapper
           each media in section.items
               figure.about__gallery__media 
                 image.about__gallery__media__image(alt=media.image.alt src=media.image.url)


              
              
